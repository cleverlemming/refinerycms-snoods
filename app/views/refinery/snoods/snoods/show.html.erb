<% content_for :body_content_title do %>
  <%= @snood.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @snood.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @snood.last_name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @snood.email %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @snood.phone %>
    </p>
  </section>
  <section>
    <h1>Company</h1>
    <p>
      <%=raw @snood.company %>
    </p>
  </section>
  <section>
    <h1>Download</h1>
    <p>
      <%=raw @snood.download %>
    </p>
  </section>
  <section>
    <h1>Contactable</h1>
    <p>
      <%=raw @snood.contactable %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="snoods">
      <% @snoods.each do |snood| %>
        <li>
          <%= link_to snood.first_name, refinery.snoods_snood_path(snood) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
